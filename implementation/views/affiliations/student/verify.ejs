<% include ../../partials/header %>
<div class="container">
    <div class="form-header">
        <h1>Student Verification </h1>

        <p>All fields are required</p>
	<p class="us-degree">This form is intended for students of US Title IV degree granting colleges and universities only.</p>

        <div class="error-container">
            <% if (errorMessage && errorMessage.length > 0) { %>
                <p>Error: <%= errorMessage %></p>
            <% } %>
        </div>

    </div>

    <div class="form-container">

        <form action="/student/verify" method="POST"> 
            <div class="form-group">
                <label for="myOrgId">
                    <div class="row">
                        <div class="col-6">College/University</div>
                        <div class="col-6 form-label-col">Please enter the full name of the US Title IV degree granting college/university you currently attend</div>
                    </div>
                </label>
                <input type="text" class="form-control" name="organizationId" id="myOrgId" required>
            </div>
            <div class="form-group">
                <label for="FIRST_NAME">
                    <div class="row">
                        <div class="col-6">First Name</div>
                        <div class="col-6 form-label-col">Please enter your name exactly as it appears on your student records</div>
                    </div>
                </label>
                <input type="text" class="form-control" name="FIRST_NAME" id="FIRST_NAME" required>
            </div>
            <div class="form-group">
                <label for="LAST_NAME">Last Name</label>
                <input type="text" class="form-control" name="LAST_NAME" id="LAST_NAME" required>
            </div>
            <div class="form-group">
                <label for="EMAIL">Email</label>
                <input type="email" class="form-control" name="EMAIL" id="EMAIL" required>
            </div>
            <div class="form-group">
                <label for="BIRTH_DATE">Birth Date</label>
                <input type="date" class="form-control" name="BIRTH_DATE" id="BIRTH_DATE" required>
            </div>
            <p class="privacy-policy-container">
                By clicking "Submit," you consent to the use of your information for verification purposes.
                Your information may be transferred to the United States and will be treated according to
                SheerIDs <a href="http://www.sheerid.com/privacy-policy/">privacy policy</a>.
            </p>
            <div class="form-group btn-container">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>

        <% include ../../partials/sheerid-logo %>
    </div>
</div>

<script src="https://services-sandbox.sheerid.com/jsapi/SheerID.js"></script>
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script>
    SheerID.load('combobox', '2.0', {
        config: {
            input: document.getElementById('myOrgId'),
            allowName: false,
            proxyName: "organizationName",
            params: {
                type: ['UNIVERSITY'],
                includeLocation: true
            }
        }
    });
</script>


<% include ../../partials/footer %>
